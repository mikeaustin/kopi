{
  "name": "kopi-language",
  "version": "0.1.0",
  "description": "A simple, immutable, 100% async language",
  "license": "ISC",
  "author": "Mike Austin <mike.austin.1024@gmail.com>",
  "homepage": "https://github.com/mikeaustin/kopi",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "node src/parser/rules.js > src/parser.new.pegjs",
    "build": "pegjs -o lib/parser.js src/parser.pegjs",
    "prestart": "npm run build",
    "start": "node --expose-gc --max-old-space-size=600 src/index.js",
    "test": "npm --silent start test/import.kopi"
  },
  "devDependencies": {
    "immutable": "^4.0.0-rc.15",
    "node-fetch": "^2.6.0",
    "pegjs": "^0.10.0"
  }
}
