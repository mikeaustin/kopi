import "test/basics.kopi"
import "test/database.kopi"
import "test/html.kopi"
import "test/async.kopi"

coroutine = (x = 1) => {
  f, g = import "test/module.kopi"

  loop = (x) => {
    cmd, _ = yield cmd => (cmd, x)

    match cmd (
      "reload" => coroutine (x)
      "eval"   => loop (x + 1)
    )
  }
  loop x
}

co = spawn coroutine

print $ send co "eval"
send co "reload"
print $ send co "eval"
print $ send co "eval"

print $ "done"
