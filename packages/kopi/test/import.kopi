import "test/async.kopi"

coroutine = (x = 1) => {
  f, g = import "test/module.kopi"

  loop = (x) => {
    command, _ = yield command => x

    match command (
      "reload" => coroutine (x)
      "next"   => loop (f x)
    )
  }
  loop x
}

co = spawn coroutine

print $ send co "next"
send co "reload"
print $ send co "next"
