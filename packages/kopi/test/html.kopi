items = 1..3

ul = props => children => "<ul>" ++ (children | xjoin "") ++ "</ul>"
li = props => children => "<li>" ++ (children | xmap 'toString | xjoin "") ++ "</li>"


html = [
  ul () (
    items | map (item) => (
      li () [item * item]
    )
  )
]

html = [
  ul () $ items | map (item) => {
    li () [item * item]
  }
]

print html


