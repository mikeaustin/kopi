items = 1..3

ul = props => children => "<ul>" ++ (children | join "") ++ "</ul>"
li = props => children => "<li>" ++ (children | toString) ++ "</li>"


html = (
  ul () (items | map (item) => (
    li () item
  ))
)

print html


html = (
  ul () $ items | map (item) => {
    li () item
  }
)

print html


