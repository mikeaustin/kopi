items = 1..3

ul = props => children => "<ul>" ++ (children | join "") ++ "</ul>"
li = props => children => "<li>" ++ (children | xmap 'toString | join "") ++ "</li>"


html = (
  ul () (items | map (item) => (
    li () [item]
  ))
)

print html


html = (
  ul () $ items | map (item) => {
    li () [item]
  }
)

print html


html = (
  ul () [
    li () [1]
    li () [2]
    li () [3]
  ]
)

print html


