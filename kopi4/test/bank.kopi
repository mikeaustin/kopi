# Simple input and recursion tests

account = balance => balance, (amount => account balance - amount)

balance, withdraw = account 100
print balance

balance, withdraw = withdraw 10
print balance

match (input "Amount?") (
  "0" => print "> Zero"
  "1" => print "> One"
   n  => print "> Unknown"
)

main = balance => \(
  print "Balance", balance
  amount = input "Withdraw $10? (y/n)"

  match amount (
    "n" => print "Exiting."
    "y" => main (balance - 10)
     _  => main (balance)
  )
)

main 100
